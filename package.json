{
  "name": "job-ads-checkout",
  "version": "1.0.0",
  "description": "Job Ads Checkout Service",
  "main": "src/server.js",
  "repository": "https://github.com/bhtandev/job-ads-checkout",
  "scripts": {
    "build": "tsc",
    "build:start": "npm run build && npm run start",
    "clean": "rm -f src/**/*.js* test/**/*.js* scripts/**/*.js*",
    "start": "node ./src/start.js",
    "start:dev": "nodemon --watch src --ignore 'src/generated/*' --watch config -e ts,json --exec npm run build:start",
    "lint": "npm run lint:ts && eslint --fix \"{src,scripts,test}/**/*.{ts,json}\"",
    "lint:ts": "prettier --write \"{src,scripts,test}/**/*.{ts,json}\"",
    "lint:ts:check": "prettier --list-different \"{src,scripts,test}/**/*.{ts,json}\"",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "LOG_LEVEL=${LOG_LEVEL:-fatal} mocha \"{test,src}/**/*.api.test.ts\"",
    "test:unit": "LOG_LEVEL=${LOG_LEVEL:-fatal} mocha \"{test,src}/**/*.unit.test.ts\"",
    "test:code": "NODE_ENV=${NODE_ENV:-test} LOG_LEVEL=${LOG_LEVEL:-fatal} mocha \"{test,src}/**/__tests__/*.test.ts\"",
    "test:watch": "npm run test:code -- --watch",
    "coverage:generate": "npm run clean && NODE_ENV=${NODE_ENV:-test} LOG_LEVEL=${LOG_LEVEL:-fatal} nyc mocha \"{src,test}/**/*.test.ts\"",
    "schema:generate": "gql-gen --config codegen.yml",
    "test:dependencies": "depcheck --ignores=@types/*,chai,ts-node,@typescript-eslint/eslint-plugin*,protobufjs --ignore-dirs=coverage"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.9.1",
    "@graphql-codegen/typescript": "^1.9.1",
    "@graphql-codegen/typescript-resolvers": "^1.9.1",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.6",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/pino": "^5.8.13",
    "@types/sinon": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "chai": "^4.2.0",
    "depcheck": "^0.9.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@graphql-codegen/schema-ast": "^1.9.1",
    "@types/graphql": "^14.5.0",
    "@types/mongoose": "^5.5.32",
    "@types/node-fetch": "^2.5.4",
    "@types/supertest": "^2.0.8",
    "apollo-server-koa": "^2.9.12",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "lodash": "^4.17.15",
    "mongodb-memory-server": "^6.0.2",
    "mongoose": "^5.7.13",
    "supertest": "^4.0.2"
  },
  "pre-commit": [
    "lint"
  ]
}
